<% include ../partials/header %>
<div class="container">
    <div class="row">
        <center><h1>Edit comment</h1></center>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT"  method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>" />
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-default btn-block" type="submit" value="Submit"/>
                </div>
            </form>
                <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>