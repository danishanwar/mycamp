<% include ../partials/header %>
<div class="container">
    <div class="row">
        <center><h1>Create a new Campground</h1></center>
        <div style="width: 30%; margin: 25px auto;">
            <form class="" method="POST" action="/campgrounds">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Camp Name" />
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Image url" />
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="Description" />
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-default btn-block" type="submit" value="Submit"/>
                </div>
            </form>
                <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>